<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
  
<suite name="TestSuitesName" verbose="1" >

  <test name="Negative Login-username" parallel="methods" thread-count="4">
	  <parameter name="username" value="tomsmit"></parameter>
	  <parameter name="password" value="SuperSecretPassword!"></parameter>
	  <parameter name="message" value="Your username is invalid!"></parameter>
    <classes>
      <class name="com.herokuapp.theinternet.loginpagetest.NegativeLoginPOMTest"/>
    </classes>
  </test>
  <test name="Negative Login-password" parallel="methods" thread-count="4">
	  <parameter name="username" value="tomsmith"></parameter>
	  <parameter name="password" value="SuperSecretPassword"></parameter>
	  <parameter name="message" value="Your password is invalid!"></parameter>
    <classes>
      <class name="com.herokuapp.theinternet.loginpagetest.NegativeLoginPOMTest"/>
    </classes>
  </test>
</suite>
